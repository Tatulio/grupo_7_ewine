<%- include("../includes/head") %>
<body>
    <%- include("../includes/header") %>
    <main class="main-register">


        <form action ="/users/" enctype="multipart/form-data" method="post" class="register-signin">
            <h2>Registro</h2>
            <fieldset class="fs-nombre" id="fs-nombre">
                <label for="nombre">Nombre</label>
                <input name="nombre" type="text" id="nombre" placeholder="Ingrese su nombre completo" 
                       value= "<%= locals.oldData ? oldData.nombre : null %>"> 
                       <p class="errores" class="display-error" id="nombre-error"></p> 
                <% if (locals.errors && errors.nombre) { %>
                    <p class="errores"><%= errors.nombre.msg %> </p>
                <% } %>
            </fieldset>
            <fieldset class="fs-apellido">
                <label for="apellido">Apellido</label>
                <input name="apellido" type="text" id="apellido" placeholder="Ingrese su apellido"
                       value= "<%= locals.oldData ? oldData.apellido : null %>">
                       <p class="errores" class="display-error" id="apellido-error"></p>
                <% if (locals.errors && errors.apellido) { %>
                    <p class="errores"><%= errors.apellido.msg %> </p>
                <% } %>
            </fieldset>
            <fieldset class="fs-e-mail-reg">
                <label for="email">Correo Electronico</label>
                <input type="text" name="email" id="email" placeholder="Direccion de Email"
                       value= "<%= locals.oldData ? oldData.email : null %>">
                       <p class="errores" class="display-error" id="email-error"></p>
                <% if (locals.errors && errors.email) { %>
                    <p class="errores"><%= errors.email.msg %> </p>
                <% } %>
            </fieldset>
            <fieldset class="fs-pass-reg">
                <label for="password">Contraseña</label>
                <input name="password" type="password" id="password" placeholder="***********">
                <% if (locals.errors && errors.password) { %>
                    <p class="errores"><%= errors.password.msg %> </p>
                <% } %>
            </fieldset>
            <fieldset class="fs-pass-reg2">
                <label for="pass-reg2">Confirmar Contraseña</label>
                <input type="password" id="pass-reg2" placeholder="Confirmar">
            </fieldset>
            <label class="boton-imagen" for="file">
                <input type="file" name="file" id="file" multiple>
            </label>
            <fieldset class="fs-button">
                <button type="submit" >Registrarse</button>    
            </fieldset>
            <section class="fs-conectar">
                <a>Registrarme con | </a>
                <a href="http://google.com" target="_blank"><img href="google.com" class="img-google" src="/images/logo-google.png" alt="icono-google"></a>
                <a href="http://facebook.com" target="_blank"><img href="facebook.com" class="img-fb" src="/images/logo-fb.jpg" alt="icono-fb"></a>
            </section>
        </form>
        <script src="/js/register.js"></script>


    </main>
    <%- include("../includes/footer") %>
</body>
</html>