        <!-- <h2 class="titulo"><%= locals.title ? title : null %> </h2> -->
        <section class="catalogo">
        
        <% if (locals.products) { %> 
            <% if (products.length > 0) { %>
             <!-- <ul class="products"> -->
                <% products.forEach(product => { %>
                    <article class="vinos">
                    <!-- <li class="product"> -->
                        <a href="/products/<%= product.id %> " class=""></a>                            
