<%- include("../includes/head") %>
<body>

    <%- include("../includes/header") %>   
 
    <main>
        <h2><%= locals.title ? title : null %> </h2>
        <% if (locals.products) { %> 
            <% if (products.length > 0) { %>
             <ul class="products">
                <% products.forEach(product => { %>
                    <li class="product">
                        <a href="/products/<%= product.id %> ">                            
                            <% if (product.image) { %>
                                <img class="imagen-producto" src="/uploads/products/<%= product.image %>" alt="" srcset="">                            
                            <% } %>
                            <section class="info">
                            <span>
                                <%= product.name %> 
                            </span>
                            <span>
                                $<%= product.price %> 
                            </span>
                            </section>
                        <section class="botones">
                            <a class="icono-edit" href="/products/update/<%= product.id %>">
                                <i class= "fas fa-pen"></i>
                            </a>
                            <form action="/products/delete/<%= product.id %>" method="post">
                                <input type="hidden" name="id" value="<%= product.id %>">
                                <button class="boton-delete" type="submit">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </form>
                        </section>
                    </li>
                <% }) %>
             </ul>
            <% } else { %>
                <h2> No hay producto</h2>
            <% } %>
            <% } else { %>
                <h2> No hay producto</h2>
       <% } %>
    </main>
    <%- include("../includes/footer") %>
</body>
</html>