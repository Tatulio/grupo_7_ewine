                                <img class="imagen-producto" src="/uploads/products/<%= product.image %>" alt="" srcset="">                            
                            <% } else { %>
                                <img class="imagen-producto" src="/uploads/products/default.jpg" alt="" srcset="">
                            <% } %>
                            <section class="info">
                            
                            <span>
                                $<%= product.price %> 
                            </span>
                            </section>
                        <section class="botones">
                            <a class="icono-edit" href="/products/update/<%= product.id %>">
                                <i class= "fas fa-pen"></i>
                            </a>
                            <form action="/products/delete/<%= product.id %>" method="post">
                                <input type="hidden" name="id" value="<%= product.id %>">
                                <button class="boton-delete" type="submit">
